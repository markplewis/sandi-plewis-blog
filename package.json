  "scriptsComments": {
    "dev": "Starts the application in development mode with hot-code reloading, error reporting, etc.",
    "build": "Vercel CI build command: creates optimized production build of the application.",
    "start": "Starts the application in production mode. The application should be compiled with next build first.",
    "lint": "Runs ESLint on all files in the speficied directories, then runs the TypeScript compiler. See: https://stackoverflow.com/a/60758789/1243086",
    "check-types": "Run the TypeScript compiler to check for errors.",
    "test": "Runs Jest tests.",
    "test-watch": "Watches files and re-runs Jest tests when they change.",
    "prettier-check": "Runs Prettier.",
    "check": "Checks for outdated NPM packages.",
    "prepare": "Installs Husky."
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir components --dir env --dir lib --dir pages --dir utils && npm run check-types",
    "check-types": "tsc --noemit",
    "test": "jest --cache",
    "test-watch": "jest --watch",
    "prettier-check": "prettier --check .",
    "check": "npx npm-check -s -u",
    "prepare": "husky install"
  },
